<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.PersonFragment">

    <LinearLayout
        android:weightSum="10"
        android:layout_margin="@dimen/dp8"
        android:background="@color/bg_green"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<!--        container-->
        <LinearLayout
            android:layout_weight="2"
            android:background="@drawable/bg_edt"
            android:layout_marginBottom="@dimen/dp8"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0">
            <RelativeLayout
                android:background="#9C27B0"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_logo"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/logo_shop"
                    android:layout_marginHorizontal="@dimen/dp8"
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp50"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_below="@id/img_logo"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/dp8"
                    android:background="@color/red"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/txt_username"
                        android:text="ten user"
                        android:background="#8BC34A"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txt_user_email"
                        android:text="xem trang ca nhan"
                        android:gravity="center"
                        android:background="#2196F3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <!--        container-->
        <LinearLayout
            android:layout_weight="1"
            android:background="@drawable/bg_edt"
            android:layout_marginBottom="@dimen/dp8"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0">
            <RelativeLayout
                android:background="#FFEB3B"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_logo1"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_cart"
                    android:layout_marginHorizontal="@dimen/dp8"
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp50"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_toEndOf="@id/img_logo1"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/dp8"
                    android:background="@color/red"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/txt_username1"
                        android:text="ten user"
                        android:background="#8BC34A"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txt_user_info1"
                        android:text="xem trang ca nhan"
                        android:background="#2196F3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <!--        container-->
        <LinearLayout
            android:layout_weight="1"
            android:background="@drawable/bg_edt"
            android:layout_marginBottom="@dimen/dp8"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0">
            <RelativeLayout
                android:background="#FFEB3B"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_logo2"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/logo_shop"
                    android:layout_marginHorizontal="@dimen/dp8"
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp50"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_toEndOf="@id/img_logo2"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/dp8"
                    android:background="@color/red"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/txt_username2"
                        android:text="ten user"
                        android:background="#8BC34A"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txt_user_info2"
                        android:text="xem trang ca nhan"
                        android:background="#2196F3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <!--        container-->
        <LinearLayout
            android:layout_weight="1"
            android:background="@drawable/bg_edt"
            android:layout_marginBottom="@dimen/dp8"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0">
            <RelativeLayout
                android:background="#FFEB3B"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_logo4"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/logo_shop"
                    android:layout_marginHorizontal="@dimen/dp8"
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp50"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_toEndOf="@id/img_logo4"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/dp8"
                    android:background="@color/red"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/txt_username4"
                        android:text="ten user"
                        android:background="#8BC34A"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txt_user_info4"
                        android:text="xem trang ca nhan"
                        android:background="#2196F3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:background="@color/red"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50">
            <TextView
                android:id="@+id/txt_logout"
                android:text="logout"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>